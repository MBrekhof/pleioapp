<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Pleioapp.ActivityPage" Title="Activiteiten" Icon="icon-activity.png">
	<ContentPage.Padding>
	    <OnPlatform x:TypeArguments="Thickness"
	                iOS="0, 40, 0, 0"
	                Android="0, 20, 0, 0"
	                WinPhone="0, 20, 0, 0" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<ListView x:Name="ActivityListView">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ImageCell ImageSource="{Binding subject.iconUrl}" Text="{Binding humanReadableActionType}" Detail="{Binding timeCreated}" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>
